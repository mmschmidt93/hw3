<h1><%= @place.name %></h1>

<ul>
    <% for post in @place.posts %>
        <li>
            <h2><%= post.title %></h2>
            <h5><%= post.posted_on%></h5>
            <h3><%= post.description%></h3>
        </li>
    <% end %>
</ul>

<p>
  <a href="/posts/new?place_id= <%= @place.id%>">New Post</a>
</p>

<p><a href="/places">Back to All Destinations</a></p>

<p><%= button_to "Delete this destination", @place, method: :delete %></p>